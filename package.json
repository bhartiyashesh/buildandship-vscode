{
  "name": "buildandship",
  "displayName": "Build & Ship",
  "description": "Deploy from your editor. One click. Zero DevOps. Your hardware.",
  "version": "0.1.0",
  "publisher": "buildandship",
  "license": "MIT",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/bhartiyashesh/buildandship-vscode"
  },
  "homepage": "https://buildandship.it",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Deployment",
    "Other"
  ],
  "keywords": [
    "deploy",
    "self-hosted",
    "docker",
    "devops",
    "ship",
    "buildandship"
  ],
  "activationEvents": [
    "workspaceContains:bs.yml",
    "workspaceContains:Dockerfile"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "buildandship.deploy",
        "title": "Deploy",
        "icon": "$(rocket)",
        "category": "Build & Ship"
      },
      {
        "command": "buildandship.login",
        "title": "Sign In with GitHub",
        "icon": "$(sign-in)",
        "category": "Build & Ship"
      },
      {
        "command": "buildandship.logout",
        "title": "Sign Out",
        "icon": "$(sign-out)",
        "category": "Build & Ship"
      },
      {
        "command": "buildandship.refresh",
        "title": "Refresh Projects",
        "icon": "$(refresh)",
        "category": "Build & Ship"
      },
      {
        "command": "buildandship.openUrl",
        "title": "Open Live URL",
        "icon": "$(link-external)",
        "category": "Build & Ship"
      },
      {
        "command": "buildandship.viewLogs",
        "title": "View Logs",
        "icon": "$(output)",
        "category": "Build & Ship"
      },
      {
        "command": "buildandship.stop",
        "title": "Stop Project",
        "icon": "$(debug-stop)",
        "category": "Build & Ship"
      },
      {
        "command": "buildandship.restart",
        "title": "Restart Project",
        "icon": "$(debug-restart)",
        "category": "Build & Ship"
      },
      {
        "command": "buildandship.destroy",
        "title": "Destroy Project",
        "icon": "$(trash)",
        "category": "Build & Ship"
      },
      {
        "command": "buildandship.link",
        "title": "Link GitHub Repo",
        "icon": "$(git-branch)",
        "category": "Build & Ship"
      },
      {
        "command": "buildandship.init",
        "title": "Initialize Project",
        "icon": "$(add)",
        "category": "Build & Ship"
      },
      {
        "command": "buildandship.showPanel",
        "title": "Open Dashboard",
        "icon": "$(dashboard)",
        "category": "Build & Ship"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "buildandship",
          "title": "Build & Ship",
          "icon": "resources/sidebar.svg"
        }
      ]
    },
    "views": {
      "buildandship": [
        {
          "id": "buildandship.projects",
          "name": "Projects",
          "when": "buildandship.loggedIn"
        },
        {
          "id": "buildandship.welcome",
          "name": "Welcome",
          "when": "!buildandship.loggedIn",
          "type": "webview"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "buildandship.projects",
        "contents": "No projects found.\n[Deploy This Project](command:buildandship.deploy)\n[Initialize Project](command:buildandship.init)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "buildandship.deploy",
          "when": "view == buildandship.projects",
          "group": "navigation@1"
        },
        {
          "command": "buildandship.refresh",
          "when": "view == buildandship.projects",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "buildandship.openUrl",
          "when": "view == buildandship.projects && viewItem =~ /hasUrl/",
          "group": "inline@1"
        },
        {
          "command": "buildandship.viewLogs",
          "when": "view == buildandship.projects && viewItem =~ /project/",
          "group": "1_actions@1"
        },
        {
          "command": "buildandship.restart",
          "when": "view == buildandship.projects && viewItem =~ /live/",
          "group": "1_actions@2"
        },
        {
          "command": "buildandship.stop",
          "when": "view == buildandship.projects && viewItem =~ /live/",
          "group": "1_actions@3"
        },
        {
          "command": "buildandship.link",
          "when": "view == buildandship.projects && viewItem =~ /project/",
          "group": "2_config@1"
        },
        {
          "command": "buildandship.destroy",
          "when": "view == buildandship.projects && viewItem =~ /project/",
          "group": "3_danger@1"
        }
      ],
      "commandPalette": [
        {
          "command": "buildandship.deploy",
          "when": "buildandship.loggedIn"
        },
        {
          "command": "buildandship.refresh",
          "when": "buildandship.loggedIn"
        }
      ]
    },
    "configuration": {
      "title": "Build & Ship",
      "properties": {
        "buildandship.cliPath": {
          "type": "string",
          "default": "bs",
          "description": "Path to the bs CLI binary"
        },
        "buildandship.refreshInterval": {
          "type": "number",
          "default": 30,
          "description": "Status refresh interval in seconds (0 to disable)"
        },
        "buildandship.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show project status in the status bar"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.mjs --production",
    "watch": "node esbuild.mjs --watch",
    "lint": "eslint src/",
    "package": "vsce package",
    "publish:vscode": "vsce publish",
    "publish:ovsx": "ovsx publish"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0",
    "ovsx": "^0.8.0"
  }
}
